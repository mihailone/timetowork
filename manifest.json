{
    "name": "W Plus",
    "version": "0.0.0.1",
    "manifest_version": 3,
    "description": "Time to work",
    "action": {
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "content/content-styles.css"
            ],
            "js": [
                "content/content.js"
            ]
        }
    ],
    "icons": {
        "16": "/icon/letter_16.png",
        "32": "./icon/letter_32.png",
        "64": "./icon/letter_64.png",
        "128": "./icon/letter_128.png"
    }
}